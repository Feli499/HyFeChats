$C = "../Common.ui";

$C.@PageOverlay {}

$C.@Container {
  Anchor: (Width: 1200, Height: 800);

  #Title {

    Group {
      Background: "../icon.png";
      Anchor: (Left: 10, Height:25, Width:25);
    }

    $C.@Title {
      @Text = "Edit Chat Settings";
    }
  }

  Group {
    LayoutMode: Top;
    FlexWeight: 1;
    Padding: (Left: 5, Right: 5);
    Anchor: (Top: 36, Bottom: 8);

    Group {
      LayoutMode: Left;
      Anchor: (Height: 30);

      Label {
        Text: "Edit Group Chat Settings!";
        Style: (
          FontSize: 18,
          TextColor: #96a9be,
          VerticalAlignment: Center,
          HorizontalAlignment: Start,
          RenderBold: true
        );
        Anchor: (Right: 0, Left: 0);
        Padding: (Top: 10, Bottom: 10);
        FlexWeight: 3;
      }


      Button #SaveButton {
        Style: ButtonStyle(
          Sounds: $C.@ButtonSounds,
          Hovered: (Background: #263047(0.8))
        );
        Background: #263047;
        OutlineColor: #424a5e;
        OutlineSize: 2;
        FlexWeight: 1;

        Label {
          FlexWeight: 1;
          Style: (
            FontSize: 22,
            TextColor: #96a9be,
            HorizontalAlignment: Center,
            VerticalAlignment: Center,
            RenderBold: true
          );
          Text: "Save";
        }
      }
    }

    Group {
      Padding: (Full: 10);
      FlexWeight: 1;
      LayoutMode: TopScrolling;
      ScrollbarStyle: $C.@DefaultScrollbarStyle;

      Group {
        FlexWeight: 2;
        LayoutMode: Top;

        Label {
          Style: (
            FontSize: 14,
            TextColor: #96a9be,
            HorizontalAlignment: Start,
            VerticalAlignment: Center
          );
          Text: "Group Name:";
        }

        TextField #GroupName {
          Anchor: (Height: 30);
          PlaceholderText: "Groupname";
          Padding: (Left:5);
          PlaceholderStyle: (
            FontSize: 14,
            TextColor: #424a5e(0.6)
          );
          Style: (
            FontSize: 14,
            TextColor: #ffffff
          );
          OutlineColor: #424a5e;
          OutlineSize: 2;

        }
      }
    }
  }
}

$C.@BackButton {}